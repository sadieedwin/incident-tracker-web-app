<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incident Tracker</title>
    <link rel="stylesheet" href="static/style.css">

    <style>
.incident-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
    font-size: 0.95rem;
}
.incident-table th,
.incident-table td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
}
.incident-table th {
    background-color: #f2f2f2;
}
</style>



</head>
<body>
    <h1>Incident Tracker</h1>

    <div class="form-container">
        <h2>Report an Incident</h2>
        <form method="POST">
	    <label for="title">Title:</label>
	    <input type="text" id="title" name="title" required>

	    <label for="description">Description:</label>
	    <textarea id="description" name="description" required></textarea>

	    <div class="form-group">
		    <label for="priority">Priority:</label>
		    <select id="priority" name="priority" required>
		        <option value="Low">Low</option>
		        <option value="Medium">Medium</option>
		        <option value="High">High</option>
  		      <option value="Critical">Critical</option>
		    </select>
	</div>

		<div class="form-group">
		    <label for="systems_affected">Systems Affected:</label>
		    <input type="text" id="systems_affected" name="systems_affected" required>
		</div>

	    <label for="resolution">Resolution:</label>
	    <textarea id="resolution" name="resolution"></textarea>

	    <label for="remarks">Remarks:</label>
	    <textarea id="remarks" name="remarks"></textarea>

            <button type="submit">Submit Incident</button>
        </form>
        {% if error_message %}
            <div style="color: red;">{{ error_message }}</div>
        {% endif %}
    </div>

    <!-- Search Form -->
    <div class="search-container">
        <h2>Search Incidents</h2>
	<form method="get" action="{{ url_for('index') }}">
    	<input type="text" name="search" value="{{ search_query }}" placeholder="Search title or description">
    	<input type="hidden" name="sort_order" value="{{ sort_order }}">
    	<button type="submit">Search</button>
	</form>
    </div>

    <!-- Incident History -->

    <!-- Sort button -->
	<form method="get" action="{{ url_for('index') }}">
    	<input type="hidden" name="search" value="{{ search_query }}">
	<input type="hidden" name="sort_order" value="{{ 'asc' if sort_order == 'desc' else 'desc' }}">
   	<button type="submit">
       	 Sort by Date {{ '↑ Asc' if sort_order == 'desc' else '↓ Desc' }}
    	</button>
	</form>

    <div class="incident-history">
	    <h2>Incident History (Table View)</h2>

	    <div class="incident-history">
    <h2>Incident History (Card View)</h2>

    {% if incidents %}
        <div style="display: flex; flex-wrap: wrap; gap: 20px;">
            {% for incident in incidents %}
            <div style="
                border: 1px solid #ccc;
                padding: 15px;
                border-radius: 8px;
                width: 300px;
                box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.05);
                background-color: #f9f9f9;
            ">
                <h3>{{ incident.title }}</h3>
                <p><strong>Priority:</strong> {{ incident.priority }}</p>
                <p><strong>Systems:</strong> {{ incident.systems_affected }}</p>
                <p><strong>Description:</strong> {{ incident.description }}</p>
                <p><strong>Resolution:</strong> {{ incident.resolution or 'N/A' }}</p>
                <p><strong>Remarks:</strong> {{ incident.remarks or 'N/A' }}</p>
                <p>
                    <strong>Created:</strong>
                    {% if incident.created_at %}
                        {{ incident.created_at.strftime('%b %d, %Y %I:%M %p') }}
                    {% else %}
                        N/A
                    {% endif %}
                </p>
                <p>
                    <strong>Updated:</strong>
                    {% if incident.updated_at %}
                        {{ incident.updated_at.strftime('%b %d, %Y %I:%M %p') }}
                    {% else %}
                        N/A
                    {% endif %}
                </p>
                <div style="margin-top: 10px;">
                    <a href="{{ url_for('edit_incident', incident_id=incident.id) }}">Edit</a> |
                    <a href="{{ url_for('delete_incident', incident_id=incident.id) }}" onclick="return confirm('Are you sure you want to delete this incident?');">Delete</a>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <p>No incidents found.</p>
    {% endif %}
</div>



    </div>
</body>
</html>

