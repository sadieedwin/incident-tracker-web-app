/* Reset and basic styles */
* {
    box-sizing: border-box;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

body {
    background-color: #f8f9fa;
    padding: 20px;
    color: #333;
}

/* Container */
.container {
    max-width: 1200px;
    margin: auto;
}

/* Navbar */
.navbar {
    background-color: #e9ecef;
    padding: 10px 20px;
    margin-bottom: 20px;
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.navbar a {
    text-decoration: none;
    color: #007bff;
    margin-right: 10px;
    font-weight: bold;
}

.navbar .btn {
    margin-left: 10px;
}

/* Headings */
h1 {
    margin-bottom: 20px;
}

/* Table */
table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    border-radius: 5px;
    overflow: hidden;
    margin-bottom: 20px;
}

th, td {
    border: 1px solid #dee2e6;
    padding: 10px;
    text-align: left;
}

th {
    background-color: #f1f1f1;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    text-decoration: none;
}

.btn-primary {
    background-color: #007bff;
    color: white;
}

.btn-secondary {
    background-color: #6c757d;
    color: white;
}

.btn-success {
    background-color: #28a745;
    color: white;
}

.btn-warning {
    background-color: #ffc107;
    color: black;
}

.btn-danger {
    background-color: #dc3545;
    color: white;
}

.btn:disabled,
.btn[disabled] {
    opacity: 0.6;
    cursor: not-allowed;
}

/* Forms */
form input[type="text"],
form select,
form textarea {
    width: 100%;
    padding: 8px;
    margin-bottom: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

form .row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

form .col {
    flex: 1;
}

/* Pagination */
.pagination {
    list-style: none;
    display: flex;
    gap: 6px;
    padding: 0;
}

.pagination li {
    display: inline;
}

.pagination .page-link {
    display: inline-block;
    padding: 6px 12px;
    background: #e2e6ea;
    border-radius: 4px;
    text-decoration: none;
    color: #333;
}

.pagination .disabled .page-link {
    background-color: #ccc;
    cursor: not-allowed;
}

/* Alerts */
.alert {
    padding: 10px;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 5px;
    margin-bottom: 15px;
}

